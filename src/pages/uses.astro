---
import type { Frontmatter } from '@interfaces/post'
import Aside from '@components/Aside.astro'
import PostLayout from '@layouts/PostLayout.astro'
import { parseRawPost } from '@utils/post-helpers'
import PostHeader from '@components/PostHeader.astro'

const [rawPost] = await Astro.glob<Frontmatter>('../data/uses.mdx')

const post = parseRawPost(rawPost)

const { Content, frontmatter } = post
---

<PostLayout post={post}>
	<Fragment slot='header'>
		<PostHeader {...frontmatter} />
	</Fragment>
	<Fragment slot='main'>
		<article class='prose-xl prose prose-invert max-w-none'>
			<Content />
		</article>
	</Fragment>
	<Aside {...frontmatter} slot='aside' />
</PostLayout>
