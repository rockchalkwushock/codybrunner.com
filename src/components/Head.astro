---
import type { Post } from '@interfaces/post'
import '@styles/global.css'
import '@fontsource/quicksand'

export interface Props {
  description?: string
  post?: Post,
  title?: string
}

const { description, title } = Astro.props
const siteTitle = `${title} | codybrunner.com`
---

<!-- Global Metadata -->
<meta charset='utf-8' />
<meta name='viewport' content='width=device-width,initial-scale=1' />
<link rel='icon' type='image/svg+xml' href='/favicons/favicon.ico' />
<meta name='generator' content={Astro.generator} />

<!-- Primary Meta Tags -->
<meta name='author' content="Cody Brunner" />
<meta name='description' content={description} />
<meta name='title' content={siteTitle} />
<title>{siteTitle}</title>

<!-- Open Graph / Facebook -->
<meta property='og:description' content={description} />
<meta property='og:image' content={new URL("", Astro.url)} />
<meta property='og:image:alt' content="" />
<meta property='og:image:height' content='800' />
<meta property='og:locale' content="en" />
<meta property='og:image:type' content='image/jpg' />
<meta property='og:image:width' content='600' />
<meta property='og:site_name' content="Cody Brunner" />
<meta property='og:title' content={siteTitle} />
<meta property='og:type' content='website' />
<meta property='og:url' content={Astro.url} />

<!-- Twitter -->
<meta property='twitter:card' content='summary_large_image' />
<meta property='twitter:creator' content="@RockChalkDev" />
<meta property='twitter:description' content={description} />
<meta property='twitter:image' content={new URL("", Astro.url)} />
<meta property='twitter:site' content="@RockChalkDev" />
<meta property='twitter:title' content={siteTitle} />
<meta property='twitter:url' content={Astro.url} />
