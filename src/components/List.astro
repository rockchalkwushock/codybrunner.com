---
import type { HTMLAttributes } from 'astro/types'
import { twMerge } from 'tailwind-merge'

export interface Props extends HTMLAttributes<'ol' | 'ul'> {
	readonly kind: 'ordered' | 'unordered'
}
const BASE_STYLES = ['flex', 'flex-col']

const { class: cls, kind, ...rest } = Astro.props
const styles = twMerge(BASE_STYLES, cls)
---

{
	kind === 'ordered' && (
		<ol {...rest} class={styles}>
			<slot />
		</ol>
	)
}

{
	kind === 'unordered' && (
		<ul {...rest} class={styles}>
			<slot />
		</ul>
	)
}
