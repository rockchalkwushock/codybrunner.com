---
import type { Tag } from '@interfaces/post'
import { Icon } from 'astro-icon'
import Link from './Link.astro'

export interface Props {
	tags: Array<Tag>
}

const { tags } = Astro.props
---

<ul class='flex flex-wrap'>
	{
		tags.map(tag => (
			<li class='group mt-2 mr-2 flex-none transform-gpu cursor-pointer rounded-lg border  border-aura-green transition duration-300 ease-in-out hover:scale-95 hover:border-transparent hover:bg-aura-green'>
				<Link
					class='flex w-full items-center space-x-0.5 rounded-lg px-1 py-0.5 text-base'
					href={`/tags/${tag}`}
					label={`Link to ${tag} related posts.`}
				>
					<Icon
						aria-label='Hashtag Icon'
						class='h-4 w-4 text-aura-green group-hover:text-aura-black'
						name='heroicons-solid:hashtag'
					/>
					<span class='font-bold text-aura-green group-hover:text-aura-black'>
						{tag}
					</span>
				</Link>
			</li>
		))
	}
</ul>
