---
// Components
import Link from './link.astro'

// Translations
import { getLangFromUrl, useTranslations } from '~/i18n'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

// Utils
import { cn } from '~/utils/helpers'

export type Props = {
	isOnAboutPage?: boolean
}

const CONTENT = [
	{
		label: t('socials.github'),
		href: 'https://github.com/rockchalkwushock',
		key: 'github',
	},
	{
		label: t('socials.linkedin'),
		href: 'https://www.linkedin.com/in/cody-brunner',
		key: 'linkedin',
	},
	{
		label: t('socials.twitter'),
		href: 'https://twitter.com/codyencolombia',
		key: 'twitter',
	},
] as const

const { isOnAboutPage = false } = Astro.props
---

<ul class={cn(isOnAboutPage ? 'grid gap-4' : 'mt-6 flex gap-3')} role='list'>
	{
		CONTENT.map(({ label, href, key }) => (
			<li class={cn(isOnAboutPage ? 'flex' : undefined)}>
				<Link
					aria-label={label}
					class={cn('group',
						isOnAboutPage
							? 'flex space-x-2 text-primary-800 transition hover:text-accent-500 dark:text-primary-200 dark:hover:text-accent-500'
							: 'text-gray-400 hover:text-gray-500'
					)}
					href={href}
					rel='noopener noreferrer'
					target='_blank'
				>
					{key === 'github' && (
						<>
							<svg
								aria-hidden='true'
								class='h-6 w-6 fill-primary-500 transition-all duration-100 ease-in-out group-hover:fill-accent-500 dark:fill-primary-400 dark:group-hover:fill-accent-400 lg:group-hover:scale-125 lg:group-hover:animate-wiggle'
								view-box='0 0 24 24'
							>
								<path
									clip-rule='evenodd'
									d='M12 2C6.475 2 2 6.588 2 12.253c0 4.537 2.862 8.369 6.838 9.727.5.09.687-.218.687-.487 0-.243-.013-1.05-.013-1.91C7 20.059 6.35 18.957 6.15 18.38c-.113-.295-.6-1.205-1.025-1.448-.35-.192-.85-.667-.013-.68.788-.012 1.35.744 1.538 1.051.9 1.551 2.338 1.116 2.912.846.088-.666.35-1.115.638-1.371-2.225-.256-4.55-1.14-4.55-5.062 0-1.115.387-2.038 1.025-2.756-.1-.256-.45-1.307.1-2.717 0 0 .837-.269 2.75 1.051.8-.23 1.65-.346 2.5-.346.85 0 1.7.115 2.5.346 1.912-1.333 2.75-1.05 2.75-1.05.55 1.409.2 2.46.1 2.716.637.718 1.025 1.628 1.025 2.756 0 3.934-2.337 4.806-4.562 5.062.362.32.675.936.675 1.897 0 1.371-.013 2.473-.013 2.82 0 .268.188.589.688.486a10.039 10.039 0 0 0 4.932-3.74A10.447 10.447 0 0 0 22 12.253C22 6.588 17.525 2 12 2Z'
									fill-rule='evenodd'
								/>
							</svg>
							{isOnAboutPage && <span>{t('socials.github')}</span>}
						</>
					)}
					{key === 'linkedin' && (
						<>
							<svg
								aria-hidden='true'
								class='h-6 w-6 fill-primary-500 transition-all duration-100 ease-in-out group-hover:fill-accent-500 dark:fill-primary-400 dark:group-hover:fill-accent-400 lg:group-hover:scale-125 lg:group-hover:animate-wiggle'
								view-box='0 0 24 24'
							>
								<path d='M18.335 18.339H15.67v-4.177c0-.996-.02-2.278-1.39-2.278-1.389 0-1.601 1.084-1.601 2.205v4.25h-2.666V9.75h2.56v1.17h.035c.358-.674 1.228-1.387 2.528-1.387 2.7 0 3.2 1.778 3.2 4.091v4.715zM7.003 8.575a1.546 1.546 0 01-1.548-1.549 1.548 1.548 0 111.547 1.549zm1.336 9.764H5.666V9.75H8.34v8.589zM19.67 3H4.329C3.593 3 3 3.58 3 4.297v15.406C3 20.42 3.594 21 4.328 21h15.338C20.4 21 21 20.42 21 19.703V4.297C21 3.58 20.4 3 19.666 3h.003z' />
							</svg>
							{isOnAboutPage && <span>{t('socials.linkedin')}</span>}
						</>
					)}
					{key === 'twitter' && (
						<>
							<svg
								aria-hidden='true'
								class='h-6 w-6 fill-primary-500 transition-all duration-100 ease-in-out group-hover:fill-accent-500 dark:fill-primary-400 dark:group-hover:fill-accent-400 lg:group-hover:scale-125 lg:group-hover:animate-wiggle'
								viewBox='0 0 24 24'
								xmlns='http://www.w3.org/2000/svg'
							>
								<path d='M8 2H1L9.26086 13.0145L1.44995 21.9999H4.09998L10.4883 14.651L16 22H23L14.3917 10.5223L21.8001 2H19.1501L13.1643 8.88578L8 2ZM17 20L5 4H7L19 20H17Z' />
							</svg>
							{isOnAboutPage && <span>{t('socials.twitter')}</span>}
						</>
					)}
				</Link>
			</li>
		))
	}
</ul>
