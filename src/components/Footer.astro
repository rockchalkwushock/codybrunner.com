---
import { Icon } from 'astro-icon'
// Components
import Link from '@components/Link.astro'
// Assets
import astroIcon from '@assets/icons/astro.svg'
import mdxIcon from '@assets/icons/mdx.svg'
import tailwindcssIcon from '@assets/icons/tailwindcss.svg'

const CONSTANTS = {
	nav: [
		{ label: 'Link to Home', href: '/', isExternal: false, text: 'Home' },
		// { label: 'Link to Blog', href: '/blog', isExternal: false, text: 'Blog' },
		{ label: 'Link to Bookshelf', href: '/bookshelf', isExternal: false, text: 'Bookshelf' },
		{ label: "Link to Cody Brunner's GitHub", href: 'https://github.com/rockchalkwushock', isExternal: true, text: 'GitHub' },
		{ label: "Link to Cody Brunner's LinkedIn", href: 'https://www.linkedin.com/in/cody-brunner', isExternal: true, text: 'LinkedIn' },
		{ label: "Link to Cody Brunner's Appointlet Booking Page", href: 'https://appt.link/cody-brunner-dev/video-call/', isExternal: true, text: 'Meet' },
		// { label: 'Link to Portfolio', href: '/portfolio', isExternal: false, text: 'Portfolio' },
		{ label: "Link to Cody Brunner's Resume", href: '/resume.pdf', isExternal: true, text: 'Resume' },
	],
	year: new Date().getFullYear(),
}
---

<footer
	class='flex w-full flex-col space-y-8 border-t border-solid border-aura-gray pb-8 lg:flex-row lg:items-center lg:space-y-0 lg:pb-0 lg:pt-6'
>
	<div class='hidden flex-1 lg:block'>
		<ul class='grid grid-cols-2 place-items-start gap-x-1'>
			{CONSTANTS.nav.map(({ text, ...rest }) => (
				<li class="group flex w-full rounded-lg bg-gradient-to-r py-1 text-left hover:from-aura-purple-fading/70 hover:via-aura-purple-fading/30 hover:to-aura-purple-fading/0">
					<Link {...rest} class="flex-1 delay-75 duration-100 ease-in-out group-hover:translate-x-4 group-hover:scale-105 group-hover:font-semibold group-hover:text-aura-orange group-hover:transition-all">
						{text}
					</Link>
				</li>
			))}
		</ul>
	</div>

	<div class='flex flex-1 flex-col items-center space-y-4'>
		<Link
			class='flex items-center space-x-1 transition-all duration-200 ease-in-out hover:scale-105 hover:font-bold hover:text-aura-orange'
			href='http://creativecommons.org/licenses/by-nc-nd/4.0/?ref=chooser-v1'
			isExternal
			label='Link to Creative Commons License'
		>
			<span>All Content</span>
			<Icon class='h-4 w-4' name='mdi:copyright' />
			<span>{CONSTANTS.year}</span>
		</Link>

		<p
		class='flex items-center space-x-3 rounded-3xl bg-aura-purple-fading px-4 py-2 shadow-lg'
		>
			<span class='font-medium text-white'>Built with</span>
			<Link
				class="transition-all duration-200 ease-in-out hover:scale-125"
				href='https://astro.build'
				isExternal
				label={`Built with ${Astro.generator}`}
			>
				<img alt='AstroJS Icon' class='h-6' src={astroIcon} />
			</Link>
			<Link class="transition-all duration-200 ease-in-out hover:scale-125" href='https://mdxjs.com' isExternal label='Built with MDXJS'>
				<img alt='MDXJS Icon' class='h-5' src={mdxIcon} />
			</Link>
			<Link
				class="transition-all duration-200 ease-in-out hover:scale-125"
				href='https://tailwindcss.com'
				isExternal
				label='Built with TailwindCSS'
			>
				<img alt='TailwindCSS Icon' class='h-5' src={tailwindcssIcon} />
			</Link>
		</p>
	</div>
</footer>

