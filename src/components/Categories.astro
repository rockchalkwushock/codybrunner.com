---
import type { Category } from '@interfaces/post'
import { Icon } from 'astro-icon'
import Link from './Link.astro'

export interface Props {
	categories: Array<Category>
}

const { categories } = Astro.props
---

<ul class='flex flex-wrap'>
	{
		categories.map(category => (
			<li class='group mt-2 mr-2 flex-none transform-gpu cursor-pointer rounded-lg border border-aura-green transition duration-300 ease-in-out hover:scale-95 hover:border-transparent hover:bg-aura-green'>
				<Link
					class='flex w-full items-center space-x-0.5 rounded-lg px-2 py-0.5 text-base'
					href={`/categories/${category}`}
					label={`Link to ${category} related posts.`}
				>
					<Icon
						aria-label='Hashtag Icon'
						class='h-4 w-4 text-aura-green group-hover:text-aura-black'
						name='heroicons-solid:hashtag'
					/>
					<span class='font-bold text-aura-green lg:group-hover:text-aura-black'>
						{category}
					</span>
				</Link>
			</li>
		))
	}
</ul>
