{
  "name": "codybrunner.com",
  "version": "0.9.0",
  "description": "My personal website and blog",
  "author": {
    "email": "me@codybrunner.com",
    "name": "Cody Brunner",
    "url": "https://codybrunner.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "next build && yarn run generate:sitemap && yarn run generate:rss && next export",
    "dev": "next",
    "format": "prettier --write",
    "generate:sitemap": "next-sitemap",
    "generate:rss": "node ./.next/server/utils/generate-rss.js.js",
    "lint": "next lint",
    "prepare": "husky install",
    "start": "serve out",
    "type-check": "tsc"
  },
  "dependencies": {
    "@mdx-js/mdx": "~1.6.22",
    "@mdx-js/react": "~1.6.22",
    "@rockchalkwushock/prism-react-renderer": "~0.1.3",
    "@tailwindcss/typography": "~0.5.0",
    "date-fns": "~2.28.0",
    "esbuild": "~0.14.13",
    "feed": "~4.2.2",
    "mdx-bundler": "~8.0.1",
    "mdx-embed": "~0.0.22",
    "next": "~12.0.8",
    "next-seo": "~4.29.0",
    "next-themes": "~0.0.15",
    "preact": "~10.6.5",
    "react": "~17.0.2",
    "react-dom": "~17.0.2",
    "react-icons": "~4.3.1",
    "react-share": "~4.4.0",
    "reading-time": "~1.5.0",
    "rehype-autolink-headings": "~6.1.0",
    "rehype-code-titles": "~1.0.3",
    "rehype-slug": "~5.0.0",
    "remark-external-links": "~9.0.1",
    "remark-gfm": "~3.0.1",
    "sass": "~1.49.0"
  },
  "devDependencies": {
    "@savvywombat/tailwindcss-grid-areas": "~2.0.0",
    "@types/node": "~17.0.10",
    "@types/react": "~17.0.38",
    "@types/react-dom": "~17.0.11",
    "@typescript-eslint/eslint-plugin": "~5.10.0",
    "@typescript-eslint/parser": "~5.10.0",
    "autoprefixer": "~10.4.2",
    "cssnano": "~5.0.16",
    "eslint": "~8.7.0",
    "eslint-config-next": "~12.0.8",
    "eslint-config-prettier": "~8.3.0",
    "husky": "^7.0.0",
    "lint-staged": "~12.3.1",
    "next-sitemap": "~1.9.12",
    "postcss": "~8.4.5",
    "postcss-import": "~14.0.2",
    "postcss-preset-env": "~7.2.3",
    "postcss-url": "~10.1.3",
    "prettier": "~2.5.1",
    "serve": "~13.0.2",
    "tailwindcss": "~3.0.15",
    "typescript": "~4.5.5"
  },
  "eslintConfig": {
    "extends": [
      "next",
      "prettier"
    ],
    "ignorePatterns": [
      "package.json",
      "vercel.json"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "react/display-name": "off"
    }
  },
  "lint-staged": {
    "*.+(js|json|md|mdx|ts|tsx|yml|yaml)": [
      "prettier --write"
    ],
    "*.+(js|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
