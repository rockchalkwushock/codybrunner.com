{
  "name": "codybrunner.com",
  "version": "0.12.0",
  "description": "My personal website and blog",
  "author": {
    "email": "me@codybrunner.com",
    "name": "Cody Brunner",
    "url": "https://codybrunner.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "next build && yarn run generate:sitemap && yarn run generate:rss && next export",
    "dev": "next",
    "format": "prettier --write",
    "generate:sitemap": "next-sitemap",
    "generate:rss": "node ./.next/server/utils/generate-rss.js.js",
    "lint": "next lint",
    "start": "serve out",
    "type-check": "tsc"
  },
  "dependencies": {
    "@mdx-js/mdx": "~2.1.1",
    "@mdx-js/react": "~2.1.1",
    "@rockchalkwushock/prism-react-renderer": "~0.1.3",
    "@tailwindcss/typography": "~0.5.2",
    "date-fns": "~2.28.0",
    "esbuild": "~0.14.36",
    "feed": "~4.2.2",
    "mdx-bundler": "~9.0.0",
    "mdx-embed": "~1.0.0",
    "next": "~12.1.5",
    "next-seo": "~5.4.0",
    "next-themes": "~0.1.1",
    "preact": "~10.7.1",
    "react": "~17.0.2",
    "react-dom": "~17.0.2",
    "react-icons": "~4.3.1",
    "react-share": "~4.4.0",
    "reading-time": "~1.5.0",
    "rehype-autolink-headings": "~6.1.0",
    "rehype-code-titles": "~1.0.3",
    "rehype-slug": "~5.0.0",
    "remark-external-links": "~9.0.1",
    "remark-gfm": "~3.0.1",
    "sass": "~1.50.1"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@savvywombat/tailwindcss-grid-areas": "~2.0.1",
    "@types/node": "~17.0.25",
    "@types/react": "~17.0.43",
    "@types/react-dom": "~17.0.14",
    "@typescript-eslint/eslint-plugin": "~5.20.0",
    "@typescript-eslint/parser": "~5.20.0",
    "autoprefixer": "~10.4.4",
    "cssnano": "~5.1.7",
    "eslint": "~8.17.0",
    "eslint-config-next": "~12.1.5",
    "eslint-config-prettier": "~8.5.0",
    "next-sitemap": "~2.5.20",
    "postcss": "~8.4.12",
    "postcss-import": "~14.1.0",
    "postcss-preset-env": "~7.4.3",
    "postcss-url": "~10.1.3",
    "prettier": "~2.6.2",
    "serve": "~13.0.2",
    "tailwindcss": "~3.0.24",
    "typescript": "~4.6.3"
  },
  "eslintConfig": {
    "extends": [
      "next",
      "prettier"
    ],
    "ignorePatterns": [
      "package.json",
      "vercel.json"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "react/display-name": "off"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
